@model IEnumerable<EdgeTechWebApp.Models.Review>

@{
    ViewBag.Title = "Reviews";
}

<h2 class="reviewHeader">Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    <div class="row">
@foreach (var item in Model)
{
        <div class="col-lg-6 mx-auto">


            <blockquote class="blockquote blockquote-custom col-sm-9">
                @if (Request.IsAuthenticated)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>

                    @Html.ActionLink("Details", "Details", new { id = item.Id }) <span>|</span>

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                <div class="blockquote-custom-icon bg-info shadow-sm"><i class="fa fa-quote-left text-white"></i></div>
                <p class="mb-0 mt-2 cardText">"@Html.DisplayFor(modelItem => item.Description)"</p>
                <footer class="blockquote-footer pt-4 mt-4 border-top">
                    @Html.DisplayFor(modelItem => item.Name)
                </footer>

            </blockquote>

        </div>

}
    </div>



